    describe("Step 5.4", () => {
        const Codec5_4 = t.partial({a: t.string});

        it("allows and disallows various elements", () => {
            validationSuccessful(Codec5_4)({});
            validationSuccessful(Codec5_4)({a: "AA"});

            validationFailed(Codec5_4)({a: undefined});
        });
    });

    describe("Step 5.3", () => {
        const Codec5_3 = t.intersection([
            t.type({a: t.string}),
            t.union([t.type({b: t.string}), t.type({c: t.string})])
        ]);

        it("allows and disallows various elements", () => {
            validationFailed(Codec5_3)({a: "A", b: "B", c: "C"});
        });
    });
